{
  "name": "wildfire",
  "version": "1.0.0",
  "description": "A digital signage management system",
  "scripts": {
    "check": "biome check",
    "dev": "dotenvx run -- bun run --hot src/index.ts",
    "drizzle:push": "dotenvx run -- drizzle-kit push",
    "drizzle:studio": "dotenvx run -- drizzle-kit studio",
    "seed:super-admin": "dotenvx run -- bun run src/infrastructure/db/seeds/seed-super-admin.ts",
    "build": "tsc --noEmit && bun build --target bun src/index.ts --outdir build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@hono/standard-validator": "^0.2.2",
    "@scalar/hono-api-reference": "^0.9.30",
    "@t3-oss/env-core": "^0.13.10",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "hono-openapi": "^1.1.2",
    "mysql2": "^3.16.0",
    "pino": "^10.3.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@dotenvx/dotenvx": "^1.51.2",
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.0.12",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
